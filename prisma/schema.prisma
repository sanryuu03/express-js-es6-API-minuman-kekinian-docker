// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id                    Int      @id @default(autoincrement())
    uuid                  String   @db.VarChar(10000) @unique
    referral              String   @db.VarChar(255) @default("kosong")
    name                  String   @db.VarChar(255)
    email                 String   @unique
    email_verified_at     String   @db.VarChar(255) @default("kosong")
    password              String   @db.VarChar(255)
    profile_picture_path  String   @db.VarChar(255) @default("kosong")
    status                String   @db.VarChar(255) @default("kosong")
    keterangan            String   @db.VarChar(255) @default("kosong")
    other                 String   @db.VarChar(255) @default("kosong")
    alasan_ditolak        String   @db.VarChar(255) @default("kosong")
    post_by               String   @db.VarChar(255) @default("kosong")
    edited_by             String   @db.VarChar(255) @default("kosong")
    deleted_by            String   @db.VarChar(255) @default("kosong")
    createdAt             DateTime @default(now())
    custom_unix_createdAt Int?
    updatedAt             DateTime @updatedAt
    custom_unix_updatedAt Int?
}
